{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "sourceMap": true,
    "lib": ["dom"],
    "resolveJsonModule": true
  },
  "exclude": [
    "__mocks__",
    "dist",
    "node_modules",
    "**/__tests__/*",
    "docker/**/*"
  ]
}